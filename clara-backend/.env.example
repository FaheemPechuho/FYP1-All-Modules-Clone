# Clara AI Support Agent - Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/clara_crm

# Supabase (optional - if using Supabase instead of direct PostgreSQL)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# JWT Secret for authentication
SECRET_KEY=change-this-to-a-long-random-string-for-production

# Email Configuration (Gmail example)
EMAIL_HOST=imap.gmail.com
EMAIL_PORT=993
EMAIL_USERNAME=your-support-email@gmail.com
EMAIL_PASSWORD=your-app-password-here
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
TRANSFORMERS_CACHE=./models/transformers_cache
